footer
  text-align center
  font-family 'Roboto Mono', monospace
  font-size 0.75rem

  hr
    // evenly space the border
    margin margin-mobile auto
    width 100%
    border 0
    border-bottom 2px solid black

    +desktop()
      margin margin-desktop auto

  a, a:hover, a:active, a:focus
    background none
    border-bottom none
    text-decoration none
    color inherit
