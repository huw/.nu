    width 210mm

    div.dialogue
      margin-left 25mm
      margin-right 50mm
      width 80mm

      h4
        margin-left 25mm

      p.parenthetical
        margin-left 10mm

    div.dual-dialogue
      margin-left 5mm
      margin-right 5mm
      width 140mm

      div.dialogue
        display inline-block
        margin 0
        width 65mm

        &.right
          float right

        h4
          margin-top 0
