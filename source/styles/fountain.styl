+above(210mm)
  body.fountain
    width 210mm

article.fountain
  font-family 'Courier Prime', Courier, 'Courier New', monospace
  font-size 1rem
  line-height 1

  &>*
    margin-top 1rem
    margin-bottom 1rem

  h1, h2, h3, h4, p
    font-size inherit
    font-weight normal

  h2  // transition
    text-align right
    &.left-aligned
      text-align left

  h3  // scene heading
    font-weight bold

  div.dialogue
    margin-left auto
    margin-right auto
    width 75%

    h4  // character name
      margin auto auto 0 23%

    p
      margin 0 auto
      &.parenthetical
        margin-left 11%

  div.dual-dialogue
    // don't display side-by-side on mobile
    margin-left auto
    margin-right auto

    div.dialogue
      margin-top 1rem
      margin-bottom 1rem

  p
    &.centered
      text-align center
      width 92.5%

    &.section, &.synopsis
      display none

  span.italic
    font-style italic

  span.bold
    font-weight bold

  span.underline
    text-decoration underline

